extends layout 

block content 
  h1 Delete Category: #{category.name}

  if items.length > 0
  
    p #[strong Delete the following items before attempting to delete this category.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Items
    
      dl
      for item in items
        dt 
          a(href=item.url) #{item.name}
        dd #{item.description}

  else
    p Do you really want to delete this category?
    
    form(method='POST' action='')
      div(class='form-container')
        input#id.form-control(type='hidden', name='categoryId', required='true', value=category._id )

      button.sumit-button(type='submit') Delete

