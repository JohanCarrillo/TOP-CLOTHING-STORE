extends layout

block content 

  h1 #{title}: #{item.name}
  
  p #[strong Description:] #{item.description}
  p #[strong Price:] #{item.price}
  p #[strong Category:] #{item.category.name}
  p #[strong Collection:] #{item.cloth_collection.name}
  p #[strong Sizes:] #{item.sizes.join(', ')}

  hr
  
  if itemInstance_list.length > 0
  
    p #[strong Delete the following instances before attempting to delete this item.]
  
    div(style='margin-left:20px;margin-top:20px')

      h2 Instances
    
      each itemInstance in itemInstance_list
        
        p #[strong Number in stock:] #{itemInstance.number_in_stock}
        p #[strong Store:] #{itemInstance.store}
        p #[strong Id:] 
          a(href=itemInstance.url) #{itemInstance.id}
        hr
  else
    h3 Do you really want to delete this item?

    form(method='POST' action='')
      div(class='form-container')
        input#id.form-control(type='hidden', name='itemId', required='true', value=item.id )
      button.sumit-button(type='submit') Delete

