extends layout

block content
	h1= title 

	- category_list.sort((a, b) => {let textA = a.name.toUpperCase(); let textB = b.name.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});

	if (category_list.length > 0)
		ul 
			for category in category_list
				li
					a(href=category.url) #{category.name}
	
	else
		div There are not categories yet.